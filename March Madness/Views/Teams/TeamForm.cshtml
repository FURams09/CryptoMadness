@model March_Madness.Models.ViewModels.TeamFormViewModel

@{
    ViewBag.Title = "Add Team";
}

@using (Html.BeginForm("Save", "Teams")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal col-md-6">
	<h4>@ViewBag.ActionText</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Mascot, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.Mascot, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Mascot, "", new { @class = "text-danger" })
		</div>
	</div>
	@Html.HiddenFor(m => m.Id)
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="@ViewBag.ActionText" class="btn btn-default" />
		</div>
	</div>
</div>
}

@if (Model.AllTeams != null)
{
	<div class="container">
		<label>@Model.AllTeams.Count() Teams Entered</label>
		<br />
		<select multiple id="team-list">
			@foreach (var team in Model.AllTeams)
			{
				<option>@team.Name @team.Mascot</option>
			}
		</select>
	</div>
}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>
